<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recommended Jewelry</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <div class="header-container">
          <div class="logo">
            <h1>Jewelry Store</h1>
          </div>
          <nav>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/products">Products</a></li>
              <% if (user) { %>
                <% if (user.role === 'admin') { %>
                  <li><a href="/admin/users">Admin Panel</a></li>
                <% } else { %>
                  <li><a href="/profile">Profile</a></li>
                <% } %>
                <li><a href="/signout">Sign Out</a></li>
              <% } else { %>
                <li><a href="/signup">Sign Up</a></li>
                <li><a href="/signin">Sign In</a></li>
              <% } %>
              <li><a href="/order" class="order-btn">Order</a></li>
            </ul>
          </nav>
        </div>
      </header>

  <main>
    <div class="container">
      <h2>Your Personalized Recommendation</h2>
      <% if (recommendations && recommendations.length) { %>
        <ul>
          <% recommendations.forEach(item => { %>
            <li>
              <h3><%= item.title %></h3>
              <p>Style: <%= item.style %></p>
              <p>Recommended for: <%= item.skin_tone %> skin, ideal for <%= item.zodiac %></p>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No recommendations available at this time.</p>
      <% } %>
    </div>
  </main>
  <footer>
    <div class="footer-container">
      <p>&copy; 2025 Jewelry Store. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
